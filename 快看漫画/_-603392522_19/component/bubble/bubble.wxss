.bubble-wrap {
    position: fixed;
    right: 20rpx;
    bottom: 0rpx;
    width: auto;
    max-width: 360rpx;
    height: 100rpx;
    z-index: 2;
}

.bubble-wrap:after {
    content: "";
    position: absolute;
    z-index: 1;
    right: 88rpx;
    bottom: 2rpx;
    width: 0;
    height: 0;
    border-left: 20rpx solid transparent;
    border-right: 20rpx solid transparent;
    border-top: 20rpx solid #fff;
}

.bubble-info {
    position: relative;
    overflow: hidden;
    z-index: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 26rpx;
    white-space: nowrap;
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 0 0 10rpx #888;
}

.info-text {
    display: flex;
    justify-content: flex-start;
    position: relative;
    padding: 0 70rpx 0 20rpx;
}

.info-title {
    display: flex;
    justify-content: space-between;
    color: #333;
    overflow: hidden;
}

.info-title text {
    text-overflow: ellipsis;
    overflow: hidden;
}

.info-update {
    color: #f5a623;
}

.info-close {
    position: absolute;
    right: 0;
    top: 0;
    width: 70rpx;
    min-width: 70rpx;
    height: 90rpx;
}

.info-close image {
    position: absolute;
    left: 20rpx;
    top: 32rpx;
    width: 30rpx;
    height: 30rpx;
}