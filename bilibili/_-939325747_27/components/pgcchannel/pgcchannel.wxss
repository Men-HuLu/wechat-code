@import "../../__wuBaseWxss__/0.wxss";

.channel-page {
    margin-top: 30rpx;
}

.header {
    width: 100%;
    height: 88rpx;
}

.headline {
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 24rpx;
    font-size: 28rpx;
    color: #212121;
    border-top: solid #E7E7E7 1rpx;
}

.scrollBar {
    width: 100%;
    height: 88rpx;
}

.channel-lists {
    width: 100%;
    margin-top: -20rpx;
}

.channel-item {
    width: 100%;
    height: 188rpx;
    border-bottom: 1rpx solid #E7E7E7;
    position: relative;
}

.read-more {
    color: #C0C0C0;
    font-size: 28rpx;
    height: 88rpx;
    width: 100%;
    line-height: 88rpx;
    text-align: center;
    margin-bottom: 88rpx;
}

.channel-img {
    position: relative;
    width: 234rpx;
    height: 146rpx;
    border-radius: 4px;
    margin-left: 24rpx;
    margin-top: 20rpx;
    float: left;
    background-repeat: no-repeat;
}

.badge {
    position: absolute;
    border-radius: 4rpx;
    right: 12rpx;
    top: 8rpx;
    color: white;
    padding: 0 8rpx;
    font-size: 20rpx;
}

.info-stat {
    margin-top: -10rpx;
}

.bg-0 {
    background: #FB7299;
}

.bg-1 {
    background: #00A1D6;
}

.bg-2 {
    background: #FAB057;
}

.channel-infos {
    margin-right: 110rpx;
    width: 380rpx;
    margin-top: 20rpx;
    float: right;
}

.channel-time {
    width: 60rpx;
    height: 28rpx;
    background: rgba(0,0,0,0.40);
    border-radius: 2px;
    font-size: 10px;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: center;
    position: absolute;
    bottom: 14rpx;
    right: 14rpx;
}

.channel-title {
    margin-left: 20rpx;
    width: 322rpx;
    font-size: 28rpx;
    color: #212121;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    line-height: 34rpx;
}

.channel-view,.channel-favorites,.channel-upname {
    font-size: 24rpx;
    color: #999999;
}

.channel-type {
    font-size: 24rpx;
    color: #999;
    margin-top: 26rpx;
}

.channel-upname {
    display: block;
}

.icon {
    color: #999999;
    vertical-align: middle;
}

.channel-card {
    position: absolute;
    margin-left: 20rpx;
    bottom: 24rpx;
}

.General_chasenumber {
    margin-left: 40rpx;
}

.score-section {
    position: absolute;
    right: 24rpx;
    top: 20rpx;
    text-align: right;
}

.score-num {
    color: #FFA726;
    font-size: 40rpx;
    margin-top: -10rpx;
    font-weight: bold;
}

.chn-score {
    font-size: 24rpx;
    color: #FFA726;
    vertical-align: 15%;
    margin-left: 4rpx;
    font-weight: bold;
}

.play-num {
    font-size: 20rpx;
    margin-top: -10rpx;
    color: #C0C0C0;
    text-align: center;
}