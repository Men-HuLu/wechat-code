.head {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background: #f4f4f4;
    margin-right: 20rpx;
}

.big.head {
    height: 76rpx;
    width: 76rpx;
}

.imgs image {
    width: 223rpx;
    height: 223rpx;
    margin-right: 15rpx;
    margin-bottom: 15rpx;
}

.imgs image:nth-child(3n) {
    margin-right: 0;
}

.name {
    font-size: 26rpx;
    color: #333;
    height: 48rpx;
    line-height: 48rpx;
}

.time {
    font-size: 24rpx;
    color: #999;
    line-height: 1;
}

.text {
    font-size: 28rpx;
    line-height: 40rpx;
    padding: 14rpx 0;
}

.content {
    width: 700rpx;
    padding: 30rpx 25rpx 15rpx;
    border-bottom: 1rpx solid #f4f4f4;
}

.item {
    padding: 15rpx 0;
}

.item .infor {
    width: 620rpx;
}

.item .name {
    font-size: 28rpx;
    color: #46a6f0;
    padding-top: 8rpx;
    line-height: 1;
    height: 28rpx;
}

.item .top {
    height: 40rpx;
    line-height: 40rpx;
}

.item .text {
    font-size: 28rpx;
    color: #333;
    line-height: 40rpx;
}

.item .text .name {
    padding: 0;
    font-size: 28rpx;
}

.form2 {
    width: 100%;
    height: 115rpx;
}

.form {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 700rpx;
    padding: 30rpx 25rpx 25rpx;
    border-top: 1rpx solid #f4f4f4;
    z-index: 5;
    height: 60rpx;
    background: #fff;
}

.form .head {
    float: left;
}

.form input {
    width: 480rpx;
    height: 60rpx;
    font-size: 28rpx;
    float: left;
}

.submit {
    width: 140rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #fff;
    background: #46a6f0;
    font-size: 36rpx;
    border-radius: 10rpx;
    float: left;
}