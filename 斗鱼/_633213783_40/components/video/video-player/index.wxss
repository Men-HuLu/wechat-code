.video-player-box {
    position: relative;
    width: 750rpx;
    height: 410rpx;
}

.video-player-box .yz {
    height: 500rpx;
}

.video-player-box .yz .video-cover .tip-box {
    padding-top: 160rpx;
}

.video-player-box .video-player {
    width: 100%;
    height: 100%;
}

.video-player-box .voice-cover {
    position: relative;
    width: 750rpx;
    height: 410rpx;
}

.video-player-box .voice-cover .voice-img {
    width: 750rpx;
    height: 410rpx;
}

.video-player-box .video-cover {
    width: 100%;
    height: 100%;
    position: relative;
}

.video-player-box .video-cover image {
    width: 100%;
    height: 100%;
}

.video-player-box .video-cover.switch .tip-box {
    background-color: rgba(0,0,0,1);
}

.video-player-box .video-cover.error .tip-box {
    background-color: rgba(0,0,0,1);
    font-size: 28rpx;
    color: #999;
}

.video-player-box .video-cover.error .tip-box .button {
    color: #F70;
    border: 1rpx solid #F70;
    height: 60rpx;
    line-height: 60rpx;
    background-color: black;
    margin-top: 30rpx;
    font-size: 28rpx;
}

.video-player-box .video-cover .tip-box {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    padding-top: 120rpx;
    z-index: 1;
    text-align: center;
    font-size: 32rpx;
    font-weight: 500;
    box-sizing: border-box;
    color: white;
    background-color: rgba(0,0,0,.6);
    letter-spacing: 1.5rpx;
}

.video-player-box .video-cover .tip-box .button {
    background-color: #f70;
    height: 80rpx;
    width: 258rpx;
    display: inline-block;
    font-size: 30rpx;
    line-height: 80rpx;
    margin-top: 40rpx;
    border-radius: 5rpx;
}