.box {
    width: 100%;
    box-sizing: border-box;
    padding: 36rpx 24rpx;
    border-bottom: 1px solid #f4f4f4;
}

.box .lefttxt view:nth-of-type(1) {
    font-size: 28rpx;
    line-height: 1;
    color: #333;
    margin-bottom: 20rpx;
}

.box .lefttxt view:nth-of-type(2) {
    font-size: 26rpx;
    color: #41a4ef;
    line-height: 1;
}

.box .righttxt {
    font-size: 24rpx;
    color: #999;
    line-height: 1;
}

.box .righttxt view:nth-of-type(2) {
    font-size: 24rpx;
    color: #e60012;
    line-height: 1;
    margin-top: 28rpx;
    text-align: right;
}

.upgrade {
    width: 100%;
    box-sizing: border-box;
    padding: 0 24rpx;
}

.upgrade .upgrade_btn {
    width: 100%;
    height: 40px;
    background: #46a6f0;
    border-radius: 10px;
    text-align: center;
    line-height: 40px;
    color: #fff;
    font-size: 18px;
    margin: 0 auto;
    margin-top: 30rpx;
}