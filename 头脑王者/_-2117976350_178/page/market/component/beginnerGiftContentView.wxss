.avatarOnly-avatar {
    position: absolute;
    top: 5rpx;
    left: 5rpx;
    width: calc(100% - 5rpx - 5rpx);
    height: calc(100% - 5rpx - 5rpx);
    border-radius: 50%;
    flex: none;
}

.avatarOnly-tiers {
    position: absolute;
    top: calc(50% - 130% / 2);
    left: calc(50% - 130% / 2);
    width: 130%;
    height: 130%;
    flex: none;
}