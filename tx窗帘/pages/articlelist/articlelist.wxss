page {
    background: #f5f5f5;
}

.art-lis {
    height: 200rpx;
    width: 100%;
    margin-bottom: 10rpx;
    background-color: #fff;
    padding: 24rpx;
    box-sizing: border-box;
    display: flex;
}

.art-lis:last-child {
    margin-bottom: 0;
}

.art-title {
    flex: 1;
    font-size: 28rpx;
    color: #3e4555;
    display: flex;
    flex-direction: column;
}

.art-name {
    flex: 1;
    height: 112rpx;
    overflow: hidden;
}

.art-view {
    height: 40rpx;
    line-height: 40rpx;
    color: #999;
    font-size: 24rpx;
}

.art-image {
    width: 152rpx;
    height: 152rpx;
    margin: 0 24rpx;
}