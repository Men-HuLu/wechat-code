.ensure-wrap {
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: fixed;
    z-index: 2;
}

.ensure-wrap,.ensure-wrap:before {
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.ensure-wrap:before {
    content: "";
    position: absolute;
    background: #000;
    opacity: .7;
}

.ensure-wrap .dialog {
    position: relative;
    z-index: 1;
    overflow: hidden;
    width: 540rpx;
    height: auto;
    border-radius: 24rpx;
    margin: 0 auto;
}

.ensure-wrap .title {
    padding: 30rpx 42rpx;
    line-height: 42rpx;
    text-align: center;
    font-size: 28rpx;
    color: #999;
    background: #fff;
}

.ensure-wrap .btn {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 28rpx;
    color: #442509;
    background: #fde23d;
}