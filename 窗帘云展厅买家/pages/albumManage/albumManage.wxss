.imgList {
    padding-bottom: 250rpx;
}

.imgposition {
    position: relative;
}

.selectbox {
    position: absolute;
    top: 8rpx;
    right: 24rpx;
    width: 30rpx;
    height: 30rpx;
}

checkbox {
    visibility: hidden;
}

.foot {
    padding: 0 24rpx;
    width: 100%;
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    left: 0;
    border-top: 1px solid #f4f4f4;
    background-color: #fff;
}

.foot .title {
    width: 100%;
    height: 84rpx;
    text-align: center;
    line-height: 84rpx;
    color: #666666;
    font-size: 24rpx;
    border-bottom: 1px solid #f4f4f4;
    background-color: #fff;
}

.foot .footBtn {
    width: 100%;
    padding: 32rpx 0;
    box-sizing: border-box;
    background-color: #fff;
}

.foot .footBtn .btn {
    width: 332rpx;
    height: 80rpx;
    background: #309bee;
    color: #fff;
    font-size: 36rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
    text-align: center;
}