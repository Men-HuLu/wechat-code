.gift-panel-wrap {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 99;
}

.gift-panel-wrap .gift-panel {
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 100;
    width: 100%;
    height: 488rpx;
    box-shadow: 0 -2rpx 10rpx #eee;
    background: rgba(255,255,255,.9);
}

.gift-panel-wrap .gift-panel .gift-list {
    width: 100%;
    height: 400rpx;
    overflow: hidden;
}

.gift-panel-wrap .gift-panel .gift-list .gift-item {
    float: left;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    border-radius: 6rpx;
    width: 25%;
    height: 200rpx;
}

.gift-panel-wrap .gift-panel .gift-list .gift-item.active {
    border: 3rpx solid #ff5d23;
}

.gift-panel-wrap .gift-panel .gift-list .gift-item .gift-icon {
    width: 60rpx;
    height: 60rpx;
}

.gift-panel-wrap .gift-panel .gift-list .gift-item .bottom {
    margin-bottom: 20rpx;
}

.gift-panel-wrap .gift-panel .gift-list .gift-item .gift-info-wrap {
    width: 100%;
}

.gift-panel-wrap .gift-panel .gift-list .gift-item .gift-name {
    margin: 18rpx 0 8rpx 0;
    width: 100%;
    height: 28rpx;
    line-height: 28rpx;
    text-align: center;
    font-size: 24rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.gift-panel-wrap .gift-panel .gift-list .gift-item .gift-price {
    width: 100%;
    height: 24rpx;
    line-height: 24rpx;
    text-align: center;
    font-size: 20rpx;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.gift-panel-wrap .gift-panel .gift-list .gift-item .expect-gift {
    font-size: 24rpx;
    color: #adadad;
    margin-bottom: 30rpx;
}

.gift-panel-wrap .gift-panel .gift-list-empty {
    position: absolute;
    top: 0;
    bottom: 90rpx;
    left: 0;
    right: 0;
    margin: auto;
    width: 120rpx;
    height: 140rpx;
}

.gift-panel-wrap .gift-panel .gift-list-empty .empty-img {
    width: 100%;
    height: 120rpx;
}

.gift-panel-wrap .gift-panel .gift-list-empty .empty-text {
    font-size: 20rpx;
    color: #adadad;
    text-align: center;
}

.gift-panel-wrap .gift-panel .send-gift-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    left: 0;
    bottom: 0;
    z-index: 5;
    box-sizing: border-box;
    border-top: 2rpx solid #ddd;
    width: 100%;
    height: 88rpx;
    background: #fff;
}

.gift-panel-wrap .gift-panel .send-gift-box .show-yuwan-box {
    display: flex;
    align-items: center;
    margin-right: 50rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
}

.gift-panel-wrap .gift-panel .send-gift-box .show-yuwan-box .yuwan-icon {
    margin-right: 10rpx;
    width: 36rpx;
    height: 36rpx;
}

.gift-panel-wrap .gift-panel .send-gift-box .show-yuwan-box .yuwan-nums {
    margin-right: 10rpx;
    font-size: 24rpx;
    color: #3f3f3f;
}

.gift-panel-wrap .gift-panel .send-gift-box .show-yuwan-box .more-icon {
    width: 11rpx;
    height: 20rpx;
}

.gift-panel-wrap .gift-panel .send-gift-box .show-yuchi-box {
    display: flex;
    align-items: center;
    flex: 1;
    box-sizing: border-box;
    padding-left: 20rpx;
    margin-right: 20%;
    overflow: hidden;
}

.gift-panel-wrap .gift-panel .send-gift-box .show-yuchi-box .yuchi-icon {
    margin-right: 10rpx;
    width: 36rpx;
    height: 36rpx;
}

.gift-panel-wrap .gift-panel .send-gift-box .show-yuchi-box .yuchi-nums {
    margin-right: 10rpx;
    font-size: 24rpx;
    color: #3f3f3f;
}

.gift-panel-wrap .gift-panel .send-gift-box .show-yuchi-box .more-icon {
    width: 11rpx;
    height: 20rpx;
}

.gift-panel-wrap .gift-panel .send-gift-box .send-gift-btn {
    width: 179rpx;
    height: 100%;
    text-align: center;
    line-height: 84rpx;
    font-size: 28rpx;
    color: #fff;
    background: #bbb;
    border-radius: 0;
}

.gift-panel-wrap .gift-panel .send-gift-box .send-gift-btn-active {
    background: linear-gradient(to right,#ff7d23,#ff5d23);
}

.gift-panel-wrap .gift-panel .send-gift-box .hove-classname {
    background: linear-gradient(to right,#cc4b1c,#cc631c);
}

.gift-panel-wrap .gift-panel .animate-gift-icon {
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    top: 37rpx;
    left: 67rpx;
    opacity: 0;
}

.gift-panel-wrap .gift-panel .animate-gift-icon image {
    width: 100%;
    height: 100%;
}