.mainView {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0px;
    left: 0px;
}

.questionView {
    position: absolute;
    width: 580rpx;
    height: 200rpx;
    left: calc(50% - 580rpx / 2);
    top: 300rpx;
    font-size: 36rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: left;
    line-height: 53rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    word-break: break-all;
    opacity: 0;
}

.questionImgView {
    position: absolute;
    width: 600rpx;
    height: 300rpx;
    left: calc(50% - 600rpx / 2);
    top: 200rpx;
    font-size: 28rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: left;
    line-height: 53rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    word-break: break-all;
    flex-direction: column;
}

.battle_btn {
    flex: none;
    width: 440rpx;
    height: 114rpx;
    background: #FFFFFF;
    box-shadow: 0 4rpx 0 0 rgba(0,0,0,0.34);
    border-radius: 70rpx;
    margin: 12rpx 0px 12rpx 0px;
    letter-spacing: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    white-space: nowrap;
    position: relative;
    white-space: nowrap;
    font-size: 40rpx;
    color: #4354A6;
    line-height: 114rpx;
    border: 4rpx solid transparent;
    opacity: 0;
    transform: scale(0,0);
}

.battle_btn.false {
    background: #FF7063;
    color: #FFFFFF;
    border: 4rpx solid transparent;
}

.battle_btn.true {
    background: #00E1BD;
    color: #FFFFFF;
    border: 4rpx solid transparent;
}

.battle_btn.selected {
    background: #4E79E5;
    color: #FFFFFF;
    border: 4rpx solid #ffff;
}

.battle_btnView {
    width: 440rpx;
    height: 552rpx;
    position: absolute;
    flex: none;
    left: calc(50% - 440rpx / 2);
    bottom: 100rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.battle_btnIconRight {
    position: absolute;
    width: 33rpx;
    height: 33rpx;
}

.battle_btnIconRight.left {
    top: calc(50% - 33rpx / 2);
    left: 20rpx;
}

.battle_btnIconRight.right {
    top: calc(50% - 33rpx / 2);
    right: 20rpx;
}

.battle_btnIconWrong {
    position: absolute;
    width: 28rpx;
    height: 28rpx;
}

.battle_btnIconWrong.left {
    top: calc(50% - 28rpx / 2);
    left: 22rpx;
}

.battle_btnIconWrong.right {
    top: calc(50% - 28rpx / 2);
    right: 22rpx;
}

.battle_questionTitleView {
    width: 420rpx;
    height: 124rpx;
    position: absolute;
    top: 230rpx;
    left: calc(50% - 420rpx / 2);
    opacity: 0;
    background-size: 420rpx 124rpx;
    background-image: url(https://question-resource-wscdn.hortorgames.com/image/new_skin/battle/img_title_question.png);
}

.battle_questionTitle {
    white-space: nowrap;
    flex: none;
    font-size: 35rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    width: 58rpx;
    height: 58rpx;
    line-height: 58rpx;
    text-align: center;
    white-space: nowrap;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
    position: absolute;
    top: 18rpx;
    left: calc(50% - 58rpx / 2);
}

.dotMainView {
    width: 540rpx;
    position: absolute;
    left: calc(50% - 540rpx / 2);
    top: 10rpx;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.dotView {
    width: 45rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column-reverse;
}

.dotImgView {
    width: 35rpx;
    height: 35rpx;
    flex: none;
    display: flex;
    justify-content: center;
    align-items: center;
    background-size: 35rpx 35rpx;
    background-image: url(https://question-resource-wscdn.hortorgames.com/image/new_skin/daily_challenge/icon_dot_default.png);
}

.dotImg {
    width: 35rpx;
    height: 35rpx;
    flex: none;
    opacity: 1;
}

.dotLabel {
    flex: none;
    width: 47rpx;
    height: 29rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    line-height: 29rpx;
    font-size: 24rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.50);
    white-space: nowrap;
}

.dotIcon1 {
    flex: none;
    width: 40rpx;
    height: 40rpx;
    margin: 0rpx 0rpx 5rpx 0rpx;
}

.dotIcon2 {
    flex: none;
    width: 50rpx;
    height: 50rpx;
    margin: 5rpx;
    margin: 0rpx 0rpx 5rpx 0rpx;
}

.dotIcon3 {
    flex: none;
    width: 60rpx;
    height: 60rpx;
    margin: 0rpx 0rpx 5rpx 0rpx;
}

.dotIconView {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    flex-direction: column;
    position: relative;
    flex: none;
    height: 90rpx;
    top: 0rpx;
}

.battle_timeView {
    display: flex;
    position: absolute;
    top: calc(170rpx - 82px / 2);
    left: calc(50% - (82px + 22px + 22px) / 2);
    width: 82px;
    height: 82px;
    border-radius: 100%;
    border: 22px solid #fff;
    transform: scale(0);
}

.battle_timeOvalViewLeft {
    width: calc(50% + 22px);
    height: calc(100% + 22px * 2);
    overflow: hidden;
    flex: none;
    position: absolute;
    top: -22px;
    right: 50%;
}

.battle_timeOvalViewLeft2 {
    width: 100%;
    height: 100%;
    top: 0px;
    left: 0px;
    position: absolute;
    overflow: hidden;
}

.battle_timeOvalViewRight {
    width: calc(50% + 22px);
    height: calc(100% + 22px * 2);
    overflow: hidden;
    flex: none;
    position: absolute;
    top: -22px;
    left: 50%;
}

.battle_timeOvalViewRight2 {
    width: 100%;
    height: 100%;
    top: 0px;
    left: 0px;
    position: absolute;
    overflow: hidden;
}

.battle_timeOvalLeft {
    width: calc(82px + 4px * 2);
    height: calc(82px + 4px * 2);
    border-radius: 100%;
    flex: none;
    position: absolute;
    border: 14px solid #f2a955;
    top: calc(50% - (82px + 4px * 2) / 2 - 14px);
    left: 4px;
}

.battle_timeOvalRight {
    width: calc(82px + 4px * 2);
    height: calc(82px + 4px * 2);
    border-radius: 100%;
    flex: none;
    position: absolute;
    border: 14px solid #f2a955;
    top: calc(50% - (82px + 4px * 2) / 2 - 14px);
    right: 4px;
}

.battle_time {
    flex: none;
    white-space: nowrap;
    font-size: 48px;
    color: #FFFFFF;
    letter-spacing: 0;
    width: 58px;
    height: 58px;
    line-height: 58px;
    text-align: center;
    white-space: nowrap;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
    position: absolute;
    top: calc(50% - 58px / 2);
    left: calc(50% - 58px / 2);
}

.battle_round {
    white-space: nowrap;
    font-size: 72rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.50);
    width: 275rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
    position: absolute;
    top: 370rpx;
    left: calc(50% - 275rpx / 2);
    transform: scale(0,0);
    opacity: 0;
}