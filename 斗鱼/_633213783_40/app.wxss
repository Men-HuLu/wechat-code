html,body,#app {
    width: 100%;
    height: 100%;
}

page {
    width: 100%;
    height: 100%;
}

page .container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

page .fit-iphonex {
    height: calc(100% - 68rpx);
}

page .fit-iphonex::after {
    content: ' ';
    position: fixed;
    bottom: 0!important;
    height: 68rpx!important;
    width: 100%;
    background: #fff;
}