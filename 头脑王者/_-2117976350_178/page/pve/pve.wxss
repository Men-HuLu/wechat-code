@import "../../template/baseInfoBar.wxss";

@import "../../template/pveStagePickerView.wxss";

@import "../../template/pveNpcPickerView.wxss";

@import "../../template/pveNpcDetailView.wxss";

@import "../../template/wheelGroup.wxss";

@import "../../template/avatarBase.wxss";

@import "../../template/ItemDetail.wxss";

.mainView {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
    overflow: hidden;
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0px;
    top: 0px;
}

.mask1 {
    width: 100%;
    height: 188rpx;
    display: flex;
    position: absolute;
    top: 0px;
    left: 0px;
}

.pveBg {
    width: 200%;
    height: 200%;
    background-image: url(https://question-resource-wscdn.hortorgames.com/image/new_skin/home/pattern.jpg);
    background-repeat: repeat;
    transform: translate3d(0px,0px,0px);
    transition: transform 10s linear;
    transition: transform 10s linear,-webkit-transform 10s linear;
    z-index: -1;
    position: absolute;
    top: 0px;
    left: 0px;
}

.userInfoMainView {
    width: 678rpx;
    height: 281rpx;
    position: absolute;
    top: 34rpx;
    left: 36rpx;
}

.userInfoBg {
    width: 678rpx;
    height: 281rpx;
}

.pveMainView {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.npcMainView {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    align-items: center;
    justify-content: center;
}

.npcDetailView {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    align-items: center;
    justify-content: center;
}

.userGoldView {
    position: absolute;
    top: 185rpx;
    left: 24rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: row;
}

.userGoldImg {
    width: 40rpx;
    height: 40rpx;
}

.userGoldNum {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-direction: row;
    font-size: 34rpx;
    color: #FFFFFF;
    font-weight: bold;
}

.userBuffMainView {
    top: 176rpx;
    right: 25rpx;
    position: absolute;
    width: 360rpx;
    height: 80rpx;
    border-radius: 50rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-direction: row;
    overflow: hidden;
    padding: 0px 10rpx 0px 10rpx;
}

.userBuffView {
    width: 60rpx;
    height: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.userBuffImg {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: 0px;
    left: 0px;
}

.userBuffTimeText {
    font-size: 20rpx;
    color: #FFFFFF;
    text-shadow: 0 0 4rpx rgba(0,0,0,0.76);
    white-space: nowrap;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: row;
    height: 25rpx;
    width: 100%;
    position: absolute;
    left: 0px;
    bottom: 0px;
}

.userBuffCountText {
    font-size: 20rpx;
    color: #FFFFFF;
    text-shadow: 0 0 4rpx rgba(0,0,0,0.76);
    white-space: nowrap;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: row;
    height: 25rpx;
    width: 50%;
    position: absolute;
    left: 50%;
    bottom: 0px;
}

.linkImg {
    width: 124rpx;
    height: 143rpx;
    position: absolute;
    top: 20rpx;
    right: 0px;
}