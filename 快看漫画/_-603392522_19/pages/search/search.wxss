.search-wrap {
    position: fixed;
}

.search-content,.search-mask {
    box-sizing: border-box;
    position: absolute;
    width: 100%;
    height: 100%;
    padding-top: 90rpx;
    background: #fff;
}

.search-mask {
    z-index: 2;
}

.search-mask .hits-wrap {
    padding: 0 40rpx;
}

.search-mask .hits-btn {
    font-size: 24rpx;
    color: #4a90e2;
    height: 40rpx;
    line-height: 40rpx;
    padding: 10rpx 0;
}

.search-mask .hits-item {
    height: 80rpx;
    line-height: 80rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 28rpx;
    color: #333;
}

.search-content {
    z-index: 1;
}

.search-tit {
    display: flex;
    justify-content: space-between;
    height: 40rpx;
    line-height: 40rpx;
    padding: 10rpx 40rpx 20rpx;
    font-size: 24rpx;
    color: #999;
}

.search-tit image {
    margin-top: -3rpx;
}

.search-hot {
    padding: 10rpx 40rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
}

.search-hot view {
    padding: 12rpx 14rpx;
    margin: 0rpx 15rpx 15rpx 0rpx;
    border: 1rpx solid #e6e6e6;
    border-radius: 100rpx;
    box-sizing: border-box;
    text-align: center;
    font-size: 26rpx;
}

.search-hot .tag {
    display: inline-block;
    width: 46rpx;
    height: 26rpx;
    line-height: 26rpx;
    font-size: 18rpx;
    text-align: center;
    vertical-align: middle;
    color: #fff;
    background: #999;
    border-radius: 6rpx;
    margin: -5rpx 0 0 8rpx;
}

.search-his {
    padding: 0 40rpx;
}

.history-item {
    display: flex;
    justify-content: space-between;
    line-height: 88rpx;
    border-bottom: 1rpx solid #e6e6e6;
}

.history-item text {
    margin-left: 14rpx;
    font-size: 28rpx;
    color: #333;
}

.history-item text,.history-item view:first-child {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.history-item view:first-child {
    width: 100%;
}

.history-item view:nth-child(2) {
    width: 44rpx;
    text-align: right;
}

.history-item image {
    vertical-align: middle;
}

.search-list {
    height: 100%;
    background: #f7f9fa;
}

.search-mask .topic {
    padding: 32rpx;
    margin-bottom: 8rpx;
    background: #fff;
}