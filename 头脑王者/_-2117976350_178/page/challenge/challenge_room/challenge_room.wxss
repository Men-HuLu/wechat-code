@import "../../../template/avatarBase.wxss";

@import "../template/audienceView.wxss";

.main-flag {
    transform: rotate(-10deg);
    transform-origin: 50% 0%;
    animation: frames-main-flag 4s infinite ease-in-out;
}

@-webkit-keyframes frames-main-flag {
    0% {
        transform: rotate(-10deg);
        transform-origin: 50% 0%;
    }

    50% {
        transform: rotate(10deg);
        transform-origin: 50% 0%;
    }

    100% {
        transform: rotate(-10deg);
        transform-origin: 50% 0%;
    }
}

@keyframes frames-main-flag {
    0% {
        transform: rotate(-10deg);
        transform-origin: 50% 0%;
    }

    50% {
        transform: rotate(10deg);
        transform-origin: 50% 0%;
    }

    100% {
        transform: rotate(-10deg);
        transform-origin: 50% 0%;
    }
}

.show-over {
    position: absolute;
    left: 0px;
    top: calc((100% - 40rpx)/2);
    width: 100%;
    height: 40rpx;
    animation: frames-show-over 0.3s ease-in-out;
}

@-webkit-keyframes frames-show-over {
    0% {
        transform: scale(0);
    }

    100% {
        transform: scale(1);
    }
}

@keyframes frames-show-over {
    0% {
        transform: scale(0);
    }

    100% {
        transform: scale(1);
    }
}