.error-box {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 99;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-color: #fff;
    position: absolute;
}

.error-box .error-icon {
    width: 294rpx;
    height: 236rpx;
}

.error-box .error-title {
    width: 100%;
    text-align: center;
    line-height: 32rpx;
    font-size: 30rpx;
    color: #5c5c5c;
    margin: 26rpx auto 20rpx;
}

.error-box .error-content {
    width: 100%;
    text-align: center;
    line-height: 32rpx;
    font-size: 28rpx;
    color: #adadad;
}

.error-box .goto-authorization {
    padding: 0;
    border-radius: 4rpx;
    margin-top: 54rpx;
    width: 148rpx;
    height: 56rpx;
    line-height: 56rpx;
    font-size: 24rpx;
    color: #fff;
    background: #ff5d23;
}

.error-box .goto-authorization::after {
    border: none;
}