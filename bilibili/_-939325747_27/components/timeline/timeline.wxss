@import "../../__wuBaseWxss__/0.wxss";

.timeline-box {
    margin-top: -10rpx;
}

.week {
    height: 88rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.day {
    display: inline-block;
    width: 80rpx;
    height: 56rpx;
    color: #505050;
    font-size: 26rpx;
    text-align: center;
    line-height: 56rpx;
}

.today {
    color: #FB7299;
}

.active {
    background: #FB7299;
    color: white;
    border-radius: 32rpx;
}

.seasoncard {
    padding-left: 24rpx;
    overflow: hidden;
    border-bottom: 1rpx solid #E7E7E7;
}

.noFan {
    width: 100%;
    height: 308rpx;
    line-height: 308rpx;
    text-align: center;
    color: #999999;
    font-size: 28rpx;
}

.pgc-sml-cover {
    height: 160rpx;
    width: 160rpx;
    background: grey;
    border-radius: 8rpx;
    background-size: 100%;
}

.card-info {
    width: 160rpx;
    height: 280rpx;
    display: inline-block;
    vertical-align: top;
    margin-right: 20rpx;
}

.card-mc {
    width: 220rpx;
    height: 100rpx;
    position: absolute;
    top: 194rpx;
    border-bottom-right-radius: 10rpx;
    border-bottom-left-radius: 10rpx;
    background-image: linear-gradient(360deg,#000000 -50%,rgba(0,0,0,0.00) 70%);
}

.card-content {
    font-size: 28rpx;
    color: #212121;
    line-height: 34rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-inline-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    vertical-align: top;
}

.today {
}

.card-update {
    font-size: 24rpx;
    color: #999999;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-top: 0rpx;
    line-height: 24rpx;
}

.headline {
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 24rpx;
}

.chn-tag {
    font-size: 28rpx;
    color: #212121;
}

.open-detail-tag {
    color: #999999;
    float: right;
    margin-top: -5rpx;
}

.all-card-btn {
    color: #FB7299;
    font-size: 24rpx;
    text-align: center;
}

.si {
    vertical-align: -8%;
    margin-left: 8rpx;
}

.pgc-box {
    padding-left: 24rpx;
}

.pgc-single {
    display: inline-block;
    margin-right: 20rpx;
    height: 408rpx;
    overflow: hidden;
    width: 220rpx;
    vertical-align: top;
}

.pgc-cover {
    width: 220rpx;
    height: 294rpx;
    border-radius: 8rpx;
    position: relative;
}

.watch-num {
    display: inline-block;
    font-size: 24rpx;
    color: #FFFFFF;
    left: 12rpx;
    bottom: 8rpx;
    position: absolute;
}

.sml {
    display: inline-block;
    line-height: 16px;
    width: 16px;
    vertical-align: -8%;
}

.rotating {
    transform: rotate(360deg);
    transition: transform 1s linear;
    transition: transform 1s linear,-webkit-transform 1s linear;
}

.badge {
    display: inline-block;
    font-size: 20rpx;
    color: #FFFFFF;
    right: 8rpx;
    top: 8rpx;
    position: absolute;
    border-radius: 4rpx;
    line-height: 20rpx;
    padding: 4rpx 8rpx;
}

.bg-0 {
    background: #FB7299;
}

.bg-1 {
    background: #00A1D6;
}

.bg-2 {
    background: #FAB057;
}

.pgc-title {
    display: inline-block;
    font-size: 28rpx;
    color: #282828;
    text-overflow: ellipsis;
    display: -webkit-inline-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    line-height: 34rpx;
    overflow: hidden;
    max-height: 64rpx;
    margin-top: 8rpx;
}

.desc {
    font-size: 24rpx;
    color: #999999;
    margin-top: -2rpx;
}

.idx-cover {
    display: inline-block;
    width: 220rpx;
    height: 88rpx;
    border-radius: 8rpx;
    position: relative;
    margin-right: 22rpx;
    background: #F4F4F4;
    margin-bottom: 20rpx;
    text-align: center;
}

.idx-title {
    font-size: 28rpx;
    color: #505050;
    display: inline-block;
    line-height: 28rpx;
}

.idx-box {
    padding-left: 24rpx;
}

.more {
    vertical-align: bottom;
    display: inline-block;
    color: #999999;
    font-size: 26rpx;
}