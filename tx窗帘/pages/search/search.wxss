.searchl input {
    color: #212121;
}

.searls {
    display: flex;
}

.searlsr {
    width: 540rpx;
    text-align: right;
}

.searlsr image {
    width: 40rpx;
    height: 40rpx;
}

.searchlslist {
    clear: both;
    overflow: hidden;
}

.searchlslist button::after {
    border: none;
}

.searchlslist button {
    float: left;
    margin-bottom: 20rpx;
    margin-right: 20rpx;
    font-size: 28rpx;
    background-color: #DEDEDE;
    line-height: 48rpx;
    text-align: center;
    top: 0;
    color: #212121;
    min-height: 1rpx;
}

.search_btn {
    color: #9E9E9E;
    opacity: 0.8;
    filter: alpha(opacity=80);
    width: 44rpx;
    height: 44rpx;
    font-size: 44rpx;
    padding-top: 23rpx;
}

.searchlslist text {
    color: #BDBDBD;
    width: 24rpx;
    height: 24rpx;
    line-height: 48rpx;
    text-align: right;
}

.searclibut {
    position: relative;
    border-bottom: 1rpx #e0e0e0 solid;
}

.searchlslist .searclibut:last-child {
    border-bottom: none;
}

.searchlslistq {
    clear: both;
    overflow: hidden;
    width: 330rpx;
    margin: 0 auto;
}

.searchlslistq button.qkls {
    margin: 0 auto;
    border-radius: 8rpx;
    color: #424242;
    background: #FBFAFC;
    float: none;
    font-size: 28rpx;
    line-height: 40rpx;
    padding: 16rpx 32rpx;
}

.searlsl {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #747474;
}

.coloritem {
    float: left;
    margin-bottom: 20rpx;
    margin-right: 40rpx;
    font-size: 28rpx;
    display: flex;
    flex-direction: column;
}

.coloritem .colorblock {
    height: 20rpx;
    width: 100rpx;
    flex: 1;
}

.coloritem text {
    width: 100%;
    text-align: center;
    height: 48rpx;
    color: #212121;
}