.popup-anchor {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10;
    background-color: rgba(0,0,0,.5);
}

.popup-anchor .popup-content {
    position: relative;
    width: 580rpx;
    height: 200rpx;
    left: 50%;
    top: 500rpx;
    transform: translate(-50%,0);
}

.popup-anchor .popup-content .popup-con {
    width: 100%;
    height: 100%;
    background-color: #FFFFFF;
    border-radius: 12rpx;
    text-align: center;
}

.popup-anchor .popup-content .popup-con .popup-title {
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #333333;
    border-bottom: 1rpx solid #EEEEEE;
}

.popup-anchor .popup-content .popup-con .popup-select {
    position: relative;
    width: 100%;
    height: 80rpx;
    font-size: 28rpx;
    color: #ff5d23;
}

.popup-anchor .popup-content .popup-con .popup-select .popup-cancel {
    display: inline-block;
    width: 49%;
    line-height: 80rpx;
    border-right: 1rpx solid #EEEEEE;
    color: #999999;
}

.popup-anchor .popup-content .popup-con .popup-select .popup-confirm {
    display: inline-block;
    width: 50%;
    line-height: 80rpx;
}

.popup-anchor .hidden-form {
    position: absolute;
    width: 50%;
    height: 80rpx;
    z-index: 5;
    right: 0;
    left: 50%;
    opacity: 0;
}

.popup-anchor .hidden-form .hidden-form-btn {
    width: 100%;
    height: 100%;
    z-index: 5;
    opacity: 0;
}

.popup-anchor .hidden-form-left {
    left: 0;
}