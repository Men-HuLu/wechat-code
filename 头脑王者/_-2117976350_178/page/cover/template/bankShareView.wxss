.gold-most {
    animation: frames-gold-most 0.5s ease-out;
}

@-webkit-keyframes frames-gold-most {
    0% {
        opacity: 0;
        transform: scale(0.3);
        transform-origin: 50% 100%;
    }

    100% {
        opacity: 1;
        transform: scale(1);
        transform-origin: 50% 100%;
    }
}

@keyframes frames-gold-most {
    0% {
        opacity: 0;
        transform: scale(0.3);
        transform-origin: 50% 100%;
    }

    100% {
        opacity: 1;
        transform: scale(1);
        transform-origin: 50% 100%;
    }
}