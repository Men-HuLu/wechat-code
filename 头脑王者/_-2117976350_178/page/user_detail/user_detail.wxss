.share-show {
    animation: frames-share-show 0.5s ease-out;
}

@-webkit-keyframes frames-share-show {
    0% {
        bottom: -90px;
    }

    100% {
        bottom: 0px;
    }
}

@keyframes frames-share-show {
    0% {
        bottom: -90px;
    }

    100% {
        bottom: 0px;
    }
}