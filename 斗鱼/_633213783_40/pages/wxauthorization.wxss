.wx-login {
    width: 100%;
    height: 100%;
}

.wx-unauthorized {
    box-sizing: border-box;
    padding-top: 100rpx;
    width: 100%;
    height: 100%;
}

.wx-unauthorized .default-icon-box {
    margin: 0 auto 28rpx;
    border-radius: 50%;
    width: 148rpx;
    height: 148rpx;
}

.wx-unauthorized .default-icon-box .default-icon {
    border-radius: 50%;
    width: 100%;
    height: 100%;
}

.wx-unauthorized .default-title {
    margin-bottom: 83rpx;
    width: 100%;
    height: 36rpx;
    line-height: 36rpx;
    text-align: center;
    font-size: 32rpx;
    color: #3f3f3f;
    font-weight: bold;
}

.wx-unauthorized .warm-tips {
    width: 100%;
    height: 42rpx;
    line-height: 42rpx;
    text-align: center;
    font-size: 28rpx;
    color: #5c5c5c;
}

.wx-unauthorized .goto-authorization {
    padding: 0;
    border-radius: 4rpx;
    margin-top: 23rpx;
    width: 400rpx;
    height: 72rpx;
    line-height: 72rpx;
    font-size: 28rpx;
    color: #fff;
    background: #ff5d23;
}

.wx-unauthorized .goto-authorization::after {
    border: none;
}