.lightEff {
    position: absolute;
    display: flex;
    flex: none;
    width: 82rpx;
    height: 86rpx;
    left: calc(50% - 82rpx / 2);
    top: calc(50% - 86rpx / 2);
    opacity: 0;
}

.lightEff.addStar {
    animation: lightEff_addStar 0.8s;
}

@-webkit-keyframes lightEff_addStar {
    59% {
        opacity: 0;
        transform: scale(0,0);
    }

    60% {
        opacity: 0;
        transform: scale(1,1);
    }

    80% {
        opacity: 0.5;
