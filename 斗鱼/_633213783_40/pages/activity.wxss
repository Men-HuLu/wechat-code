page {
    background-color: #eee;
}

.activity-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

.activity-container .activity-list .activity-list-item {
    position: relative;
    width: 690rpx;
    height: 402rpx;
    background: #ffffff;
    border-radius: 8rpx;
    margin-top: 22rpx;
}

.activity-container .activity-list .activity-list-item .activity-list-item-wrap {
    padding: 0 24rpx;
}

.activity-container .activity-list .activity-list-item .activity-list-item-wrap .activity-list-header {
    font-size: 32rpx;
    color: #333333;
    padding: 18rpx 0;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.activity-container .activity-list .activity-list-item .activity-list-item-wrap .activity-list-content {
    position: relative;
    height: 240rpx;
}

.activity-container .activity-list .activity-list-item .activity-list-item-wrap .activity-list-content .activity-default {
    width: 642rpx;
    height: 240rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
}

.activity-container .activity-list .activity-list-item .activity-list-item-wrap .activity-list-content .activity-image {
    width: 642rpx;
    height: 240rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 3;
}

.activity-container .activity-list .activity-list-item .activity-list-item-wrap .activity-list-content .activity-hot-tag {
    z-index: 3;
    display: block;
    position: absolute;
    top: 10rpx;
    right: 12rpx;
    font-size: 24rpx;
    color: #ffffff;
    text-align: center;
    width: 132rpx;
    height: 36rpx;
    background-image: url(https://sta-op.douyucdn.cn/dyfelocal/act/5b4867e38d592a7dea394d93/hot.png);
    background-size: 100% 100%;
}

.activity-container .activity-list .activity-list-item .activity-list-item-wrap .activity-list-content .activity-recom-tag {
    z-index: 3;
    display: block;
    position: absolute;
    top: 10rpx;
    right: 12rpx;
    font-size: 24rpx;
    color: #ffffff;
    text-align: center;
    width: 132rpx;
    height: 36rpx;
    background-image: url(https://sta-op.douyucdn.cn/dyfelocal/act/5b4867e38d592a7dea394d93/rec.png);
    background-size: 100% 100%;
}

.activity-container .activity-list .activity-list-item .activity-list-item-wrap .activity-list-bottom {
    display: flex;
    justify-content: space-between;
    padding: 19rpx 0 30rpx;
}

.activity-container .activity-list .activity-list-item .activity-list-item-wrap .activity-list-bottom .activity-date {
    font-size: 24rpx;
    color: #999;
}

.activity-container .activity-list .activity-list-item .activity-list-item-wrap .activity-list-bottom .activity-amount-wrap {
    color: #3f3f3f;
    font-size: 24rpx;
}

.activity-container .activity-list .activity-list-item .activity-list-item-wrap .activity-list-bottom .activity-amount-wrap .activity-amount {
    font-size: 24rpx;
    color: #ff5c08;
    margin-right: 10rpx;
}

.activity-container .activity-list .activity-list-item .hidden-form {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 15;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    position: absolute;
    opacity: 0;
}

.activity-container .activity-list .activity-list-item .hidden-form .hidden-form-btn {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 15;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    position: absolute;
    opacity: 0;
}